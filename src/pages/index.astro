---
import Base from "../layouts/Base.astro";
import PanelCard from "../components/PanelCard.astro";
import Buttons from "../components/Buttons.astro";
import { features } from "../data/voidless";
---
<Base title="Voidless Tale — Home" description="A slick hub for the game & tools.">
  <section class="panel p-8 mb-6">
    <div class="badge mb-2">Welcome</div>
    <h1 class="text-3xl md:text-4xl font-extrabold mb-3">Voidless Tale</h1>
    <p class="text-mute max-w-2xl">
      Explore mirrored realms, reclaim your memories, and forge weapons with Voidless Smith.
    </p>
    <div class="mt-5 flex gap-3">
      <Buttons label="Explore the Game" href="/voidless-tale" />
      <Buttons label="Voidless Smith" href="/voidless-smith" />
    </div>
  </section>

  <div class="grid md:grid-cols-3 gap-4">
    {features.slice(0,3).map(f => <PanelCard title={f} />)}
    <PanelCard title="Wishlist on Steam" kicker="CTA">
      <div class="mt-3 flex gap-2">
        <Buttons label="Steam — Placeholder" href="#" />
        <Buttons label="itch.io — Placeholder" href="#" />
      </div>
    </PanelCard>
  </div>
</Base>
