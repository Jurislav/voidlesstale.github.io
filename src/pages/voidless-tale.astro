---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import PanelCard from "../components/PanelCard.astro";
import StoreBar from "../components/StoreBar.astro";
import SectionHeading from "../components/SectionHeading.astro";
import BossCard from "../components/BossCard.astro";
import { features, systems, domains, bosses } from "../data/voidless";
---
<Base title="Voidless Tale — Game" description="Features, bosses, and realms.">
  <Hero title="Loot or Absorb. Rise or Fall."
        subtitle="Traverse Heaven and Hell, unlock sin memories, and decide what kind of power you wield."
        ctas={[{label:'Wishlist — Steam (Placeholder)', href:'#', primary:true},
               {label:'itch.io (Placeholder)', href:'#'}]} />

  <section class="grid lg:grid-cols-3 gap-4 mt-6">
    <PanelCard kicker="Overview" title="2D Pixel-Art Action RPG">
      Traverse mirrored realms of Heaven and Hell, unlock sin memories, and choose to loot or absorb powers.
    </PanelCard>
    <PanelCard kicker="Key Features" title="Highlights">
      <ul class="list-disc pl-5 space-y-1">{features.map(f => <li>{f}</li>)}</ul>
    </PanelCard>
    <PanelCard kicker="Systems" title="Buildcraft">
      <ul class="list-disc pl-5 space-y-1">{systems.map(s => <li>{s}</li>)}</ul>
    </PanelCard>
  </section>

  <section class="panel p-6 mt-6">
    <SectionHeading kicker="World" title="Domains" />
    <div class="grid md:grid-cols-2 gap-3">
      {domains.map(d => (
        <div class="p-3 rounded-lg bg-surface/60 border border-edge/60">
          <div class="text-sm text-mute mb-1">{`#${d.n} — ${d.sin}`}</div>
          <div class="text-sm"><span class="badge mr-2">Heaven</span>{d.heaven}</div>
          <div class="text-sm mt-1"><span class="badge mr-2">Hell</span>{d.hell}</div>
        </div>
      ))}
    </div>
  </section>

  <section class="mt-6">
    <SectionHeading kicker="Bosses" title="Boss Lineup" />
    <div class="grid md:grid-cols-2 gap-4">
      {bosses.map(b => <BossCard {...b} />)}
    </div>
  </section>

  <section class="panel p-6 mt-6">
    <header class="flex items-end justify-between mb-3">
      <div>
        <div class="kicker mb-1">Trailer</div>
        <h3 class="text-xl font-semibold">Reveal Trailer</h3>
      </div>
      <span class="text-mute text-sm">Placeholder</span>
    </header>
    <div class="aspect-video rounded-xl2 border border-edge/60 bg-surface/60 flex items-center justify-center">
      <span class="text-mute">Video embed placeholder</span>
    </div>
  </section>

  <div class="mt-6"><StoreBar /></div>
</Base>
