---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import PanelCard from "../components/PanelCard.astro";
---
<Base title="Voidless Smith — Modding Tool" description="Design, tint, export, and import weapon sprites & configs.">
  <Hero title="Voidless Smith"
        subtitle="Standalone mod-authoring tool for parts, palettes, randomizer, PNG+JSON export."
        ctas={[{label:'GitHub Releases — Placeholder', href:'#', primary:true}]} />
  <section class="grid lg:grid-cols-3 gap-4 mt-6">
    <PanelCard kicker="What it is" title="Standalone tool">
      Parts library (blade, guard, hilt, pomel), palette swaps, randomizer/manual builds, PNG+JSON export.
    </PanelCard>
    <PanelCard kicker="Export & Integrate" title="Mod-ready output">
      One-click export to mod folder, JSON config generation, roadmap for .voidmod packaging & Workshop.
    </PanelCard>
    <PanelCard kicker="Roadmap" title="Future">
      In-editor testing sandbox, auto-update, version history.
    </PanelCard>
  </section>
</Base>
